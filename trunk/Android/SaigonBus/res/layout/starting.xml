<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background = "@drawable/background"
	>
	<include layout="@layout/customtitlebar"/>
	<RelativeLayout
		android:layout_below = "@+id/layoutTitle"
		android:layout_width = "fill_parent"
		android:layout_height = "55dip"
		android:id = "@+id/idHeader"		
		android:background = "@drawable/header_wipolo_start">		
		<ImageView
			android:layout_centerHorizontal = "true"
			android:layout_marginTop = "5dip"
			android:layout_width = "226dip"
			android:layout_height = "37dip"
			android:background = "@drawable/backgroundicon"	>		
		</ImageView>
	</RelativeLayout>	
		
	<LinearLayout
		android:id = "@+id/layoutButton"
		android:layout_width="298dip" android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_below = "@+id/idHeader"
		android:background = "@drawable/bluebotransparency"
		android:layout_marginTop = "40dip"
		android:layout_marginLeft = "10dip"
		android:layout_centerVertical = "true"
	>	
		<Button android:layout_height="69dip" android:id="@+id/signupButton"
				android:scrollbarAlwaysDrawVerticalTrack="false" android:layout_width="221dip"
				android:text="Tìm Đường"
				android:background="@drawable/button_login"	
				android:paddingTop = "5dip"
				android:paddingBottom = "5dip"
				android:paddingLeft = "55dip"		
				android:layout_marginLeft = "10dip"
				android:textColor = "#FFFFFF"
				android:textSize = "18sp"
				></Button>
		<Button 
			android:background = "@drawable/button_signup"
			android:layout_width="221dip"
			android:layout_height="69dip" android:id="@+id/signinButton"
			android:paddingTop = "5dip"
			android:paddingBottom = "5dip"
			android:paddingRight = "55dip"
			android:layout_marginLeft = "50dip"
			android:textColor = "#FFFFFF"
			android:textSize = "18sp"
			android:text="Tuyến xe"></Button>		
		<Button android:layout_width="221dip"
			android:background = "@drawable/button_presentation"
			android:layout_height="69dip" android:id="@+id/id_button_presentation"
			android:paddingTop = "5dip"
			android:paddingBottom = "5dip"
			android:paddingLeft = "55dip"
			android:layout_marginLeft = "10dip"
			android:textColor = "#FFFFFF"	
			android:textSize = "18sp"
			android:text="Bản Đồ"></Button>
	</LinearLayout>			
</RelativeLayout>

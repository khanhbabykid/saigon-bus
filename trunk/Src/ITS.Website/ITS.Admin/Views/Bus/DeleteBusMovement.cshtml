@model ITS.Domain.Models.Bus.Admin.DeleteBusMovementViewModel
@{
    ViewBag.Title = "DeleteBusMovement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    DeleteBusMovement</h2>
<fieldset>
    <legend>Confirmation</legend>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.BusMovementID)
        @Html.HiddenFor(model => model.RouteID)
        <p>
            <h3>
                Are you sure you want to delete this?</h3>
        </p>
        <p>
            <input type="submit" value="Delete" />
            |
            @Html.ActionLink("Cancel", "BusMovements", new { ID = Model.RouteID })
        </p>
    }
</fieldset>

@model ITS.Domain.Models.Bus.Admin.BusRouteListViewModel
@{
    ViewBag.Title = "BusRouteList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <div class="gadget" style="opacity: 1; z-index: 0;">
        <div class="titlebar vertsortable_head">
            <a href="#" class="hidegadget" rel="hide_block" style="background-image: url(/images/button_dropup_bl.gif);">
                <img src="/images/spacer.gif" alt="picture" width="19" height="33" /></a>
            <h3>
                Danh sách các tuyến xe bus</h3>
        </div>
        <div class="gadgetblock" style="display: block;">
            <table class="gwlines full">
                <tbody>
                    <tr>
                        <th style="text-align: center">
                            Tên tuyến
                        </th>
                        <th>
                        </th>
                    </tr>
                    @for (int i = 0; i < Model.BusRouteList.Count; i++)
                    {
                        <tr>
                            <td style="text-align: center">
                                @Html.HiddenFor(m => m.BusRouteList[i].RouteID)
                                @Html.TextBoxFor(m => m.BusRouteList[i].RouteName)
                            </td>
                            <td style="text-align: center">
                                <a href="@Url.Action("DeleteBusRoute", new { ID = Model.BusRouteList[i].RouteID })">
                                    Delete</a> | <a href="@Url.Action("BusMovements", new { ID = Model.BusRouteList[i].RouteID })">
                                        Di chuyển</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                Thêm tuyến mới:<br />
                <span>Tên tuyến: </span>@Html.TextBoxFor(m => m.NewBusRoute)<br />
            </p>
            <input type="submit" value="Save" />
        </div>
    </div>
    
}
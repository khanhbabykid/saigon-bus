@model ITS.Domain.Models.Bus.Admin.RoadListViewModel
@{
    ViewBag.Title = "BusRouteList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Danh sách đường</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false)
    <div class="gadget" style="opacity: 1; z-index: 0;">
        <div class="gadgetblock" style="display: block;">
            <table class="gwlines full">
                <tbody>
                    <tr>
                        <th style="text-align: center">
                            Tên tuyến
                        </th>
                        <th>
                        </th>
                    </tr>
                    @for (int i = 0; i < Model.RoadList.Count; i++)
                    {
                        <tr>
                            <td style="text-align: center">
                                @Html.HiddenFor(m => m.RoadList[i].RoadID)
                                @Html.TextBoxFor(m => m.RoadList[i].RoadName)
                            </td>
                            <td style="text-align: center">
                                <a href="@Url.Action("DeleteRoad", new { ID = Model.RoadList[i].RoadID })">Delete</a>
                                | <a href="@Url.Action("RoadSessionList", new { ID = Model.RoadList[i].RoadID })">Đoạn đường</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                Thêm đường mới:<br />
                <span>Tên đường: </span>@Html.TextBoxFor(m => m.NewRoad)<br />
            </p>
            <input type="submit" value="Save" />
        </div>
    </div>
    
}